{
  "kind": "collectionType",
  "collectionName": "tournaments",
  "info": {
    "singularName": "tournament",
    "pluralName": "tournaments",
    "displayName": "Tournament"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "tournament_token": {
      "type": "uid",
      "targetField": "name"
    },
    "tournament_stage": {
      "type": "enumeration",
      "enum": [
        "registration",
        "active",
        "finished"
      ]
    },
    "bracket_type": {
      "type": "enumeration",
      "enum": [
        "swiss",
        "double_elimination"
      ]
    },
    "bracket_data": {
      "type": "json"
    },
    "participants": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "tournaments"
    }
  }
}
